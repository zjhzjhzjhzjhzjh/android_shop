<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".SecActivity" >
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sweet_city"
        />
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        >
        
        <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#CCC" 
        android:paddingTop="30dp"
        />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" 
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="¥69.00" 
            android:paddingTop="5dp"
            android:textSize="30dp"
            android:textColor="#FF463C"
            />
        <View 
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#CCC"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="收藏" 
            android:layout_marginTop="23dp"
            android:layout_marginLeft="70dp"
            />
        
    </LinearLayout>
    <TextView
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Sweet City/都市甜心油性指甲油美甲套装 魅影OL裸色系列7+1礼盒 TC03" 
        android:textSize="20dp"
        />
    <View
        android:layout_height="8px"
        android:layout_width="match_parent"
        android:background="#CCC" 
        />
    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#CCC" 
        android:paddingTop="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:padding="10dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺满额领"
            android:background="#DA70D6"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="满¥99.00减¥20.00,满¥199.00减¥60.00"
            android:textSize="15dp"
            />
        
    </LinearLayout>
    <View
        android:layout_height="8px"
        android:layout_width="match_parent"
        android:background="#CCC" 
        />
    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#CCC" 
        android:paddingTop="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:paddingTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品简介"
            android:textSize="25dp" 
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品:姗蔻无毒指甲油包邮环保裸色指甲油儿童孕妇持久无毒..." 
            android:textSize="18dp" 
            android:paddingTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="净含量:7.5" 
            android:textSize="18dp"
             android:paddingTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上市时间:2013-06-18" 
            android:textSize="18dp" 
             android:paddingTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色分类:湖水蓝 裸粉色 透明亮色 枚红色 珠光红" 
            android:textSize="18dp" 
             android:paddingTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="肤质:任何肤质" 
            android:textSize="18dp" 
             android:paddingTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产地:中国" 
            android:textSize="18dp" 
             android:paddingTop="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#333333" 
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:padding="10dp"
            >
            <Button
            android:id="@+id/btn_get"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="加入购物车"
            android:background="@drawable/shape_sec_bg"
            android:textColor="#FFFFFF"
            />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:padding="10dp"
            >
            <Button
            android:layout_width="200dp"
            android:layout_height="70dp" 
            android:text="立即购买"
            android:background="@drawable/shape_sec1_bg"
            android:textColor="#FFFFFF"
            />
        </RelativeLayout>
        
        
        
    </LinearLayout>
    
    
    
    
    
    
    
</LinearLayout>
